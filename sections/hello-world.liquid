{% liquid
  assign hero_image = section.settings.hero_image
  assign hero_image_mobile = section.settings.hero_image_mobile
  assign hero_heading = section.settings.hero_heading | default: 'MORE THAN A FLATBED'
  assign hero_background_url = 'GasStation.jpg' | asset_url
  assign hero_background_mobile_url = hero_background_url

  if hero_image
    assign hero_background_url = hero_image | image_url: width: 2600
  endif

  if hero_image_mobile
    assign hero_background_mobile_url = hero_image_mobile | image_url: width: 1400
  elsif hero_image
    assign hero_background_mobile_url = hero_background_url
  endif

  assign about_heading_primary = section.settings.about_story_heading_primary | default: 'Born from experience'
  assign about_heading_secondary = section.settings.about_story_heading_secondary | default: 'What makes us different'
  assign about_image = section.settings.about_image
  assign about_image_alt = section.settings.about_image_alt | default: section.settings.about_heading
  assign about_image_alt = about_image_alt | strip | escape

  assign metric_blocks = section.blocks | where: 'type', 'about_metric'
  assign story_blocks = section.blocks | where: 'type', 'story_block'
  assign feature_blocks = section.blocks | where: 'type', 'feature_card'
  assign feature_size_defaults = 'large,medium,medium,small,small,medium,large' | split: ','
  assign features_kicker_default = 'sections.features.kicker' | t
  assign features_heading_default = 'sections.features.heading' | t
  assign features_subheading_default = 'sections.features.subheading' | t
%}

<div class="fof-page" id="top" data-section-id="{{ section.id }}">
  <section
    class="fof-hero"
    style="--fof-hero-image: url('{{ hero_background_url }}');"
  >
    <div
      class="fof-hero__media"
      style="--fof-hero-image-mobile: url('{{ hero_background_mobile_url }}');"
    ></div>
    <div class="fof-shell fof-hero__shell">
      <h1 class="fof-hero__headline">{{ hero_heading | escape }}</h1>
    </div>
  </section>

  <section class="fof-about" id="about">
    <div class="fof-shell fof-about__shell">
      <div class="fof-about__intro{% if about_image %} fof-about__intro--has-media{% endif %}">
        {% if about_image %}
          <div class="fof-about__intro-media">
            {{ about_image
              | image_url: width: 1400
              | image_tag:
                alt: about_image_alt,
                loading: 'lazy',
                widths: '700, 1000, 1400'
            }}
          </div>
        {% endif %}
        <div class="fof-about__intro-content">
          <span class="fof-kicker">{{ section.settings.about_kicker | default: 'Born From The Trail' }}</span>
          <h2>{{ section.settings.about_heading | default: 'Built by enthusiasts, for enthusiasts.' }}</h2>
          {% if section.settings.about_intro != blank %}
            <p>{{ section.settings.about_intro }}</p>
          {% endif %}
          {% if metric_blocks.size > 0 %}
            <div class="fof-about__metrics">
              {% for block in metric_blocks %}
                {% assign metric_value = block.settings.value %}
                {% assign metric_label = block.settings.label %}
                <div class="fof-about__metric" {{ block.shopify_attributes }}>
                  {% if metric_value != blank %}
                    <span class="fof-about__metric-value">{{ metric_value }}</span>
                  {% endif %}
                  {% if metric_label != blank %}
                    <span class="fof-about__metric-label">{{ metric_label }}</span>
                  {% endif %}
                </div>
              {% endfor %}
            </div>
          {% endif %}
        </div>
      </div>

      {% if story_blocks.size > 0 %}
        <div class="fof-about__stories">
          {% for block in story_blocks %}
            {% liquid
              assign position_class = 'fof-about__story--image-left'
              assign index_modulo = forloop.index0 | modulo: 2
              if index_modulo == 1
                assign position_class = 'fof-about__story--image-right'
              endif
              assign story_alt = block.settings.image_alt | default: block.settings.heading
              assign story_alt = story_alt | strip
              assign story_alt = story_alt | escape
            %}
            <article class="fof-about__story {{ position_class }}" {{ block.shopify_attributes }}>
              <div class="fof-about__story-media">
                {% if block.settings.image %}
                  {{ block.settings.image
                    | image_url: width: 1100
                    | image_tag:
                      alt: story_alt,
                      loading: 'lazy',
                      widths: '550, 750, 1100'
                  }}
                {% else %}
                  {{ 'image' | placeholder_svg_tag: 'fof-placeholder' }}
                {% endif %}
              </div>
              <div class="fof-about__story-content">
                {% assign story_heading = block.settings.heading %}
                {% if forloop.index == 1 %}
                  {% assign story_heading = about_heading_primary %}
                {% elsif forloop.index == 2 %}
                  {% assign story_heading = about_heading_secondary %}
                {% endif %}
                <h3>{{ story_heading }}</h3>
                {% if block.settings.body != blank %}
                  <p>{{ block.settings.body }}</p>
                {% endif %}
                {% if block.settings.highlight != blank %}
                  <div class="fof-about__stat">
                    <span>{{ block.settings.highlight }}</span>
                  </div>
                {% endif %}
              </div>
            </article>
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </section>

  <section class="fof-features" id="features">
    <div class="fof-shell fof-features__shell">
      <div class="fof-features__title">
        <h2>{{ 'sections.features.title' | t }}</h2>
      </div>
      <div class="fof-features__head">
        {% assign features_kicker = section.settings.features_kicker | default: features_kicker_default %}
        {% assign features_heading = section.settings.features_heading | default: features_heading_default %}
        {% assign features_subheading = section.settings.features_subheading | default: features_subheading_default %}
        {% if features_kicker != blank %}
          <span class="fof-kicker">{{ features_kicker }}</span>
        {% endif %}
        <h3 class="fof-features__tagline">{{ features_heading }}</h3>
        {% if features_subheading != blank %}
          <p>{{ features_subheading }}</p>
        {% endif %}
      </div>
      <div class="fof-features__grid">
        {% assign required_feature_count = 7 %}
        {% assign rendered_feature_blocks = 0 %}
        {% for block in feature_blocks limit: required_feature_count %}
          {% assign rendered_feature_blocks = rendered_feature_blocks | plus: 1 %}
          {% assign size_index = forloop.index0 %}
          {% assign fallback_size = feature_size_defaults[size_index] | default: 'medium' %}
          {% assign fallback_size = fallback_size | downcase %}
          {% assign card_size = block.settings.size | default: fallback_size %}
          {% assign card_size = card_size | downcase %}
          {% unless card_size == 'small' or card_size == 'medium' or card_size == 'large' %}
            {% assign card_size = fallback_size %}
          {% endunless %}
          {% capture title_key %}sections.features.cards.{{ rendered_feature_blocks }}.title{% endcapture %}
          {% capture description_key %}sections.features.cards.{{ rendered_feature_blocks }}.description{% endcapture %}
          {% assign default_title = title_key | t %}
          {% assign default_description = description_key | t %}
          {% liquid
            assign feature_alt_source = block.settings.image_alt | default: block.settings.title | default: default_title
            assign feature_alt = feature_alt_source | strip | escape
          %}
          <article class="fof-feature-card fof-feature-card--{{ card_size }}" {{ block.shopify_attributes }}>
            <div class="fof-feature-card__media">
              {% if block.settings.image %}
                {{ block.settings.image
                  | image_url: width: 900
                  | image_tag:
                    alt: feature_alt,
                    loading: 'lazy',
                    widths: '450, 650, 900'
                }}
              {% else %}
                {{ 'image' | placeholder_svg_tag: 'fof-placeholder' }}
              {% endif %}
            </div>
            <div class="fof-feature-card__content">
              <h3>{{ block.settings.title | default: default_title }}</h3>
              {% assign feature_description = block.settings.description | default: default_description %}
              {% if feature_description != blank %}
                <p>{{ feature_description }}</p>
              {% endif %}
            </div>
          </article>
        {% endfor %}
        {% assign placeholder_start = rendered_feature_blocks | plus: 1 %}
        {% if placeholder_start <= required_feature_count %}
          {% for index in (placeholder_start..required_feature_count) %}
            {% assign size_index = index | minus: 1 %}
            {% assign fallback_size = feature_size_defaults[size_index] | default: 'medium' %}
            {% assign fallback_size = fallback_size | downcase %}
            {% capture title_key %}sections.features.cards.{{ index }}.title{% endcapture %}
            {% capture description_key %}sections.features.cards.{{ index }}.description{% endcapture %}
            {% assign placeholder_title = title_key | t %}
            {% assign placeholder_description = description_key | t %}
            <article class="fof-feature-card fof-feature-card--{{ fallback_size }} fof-feature-card--placeholder" data-placeholder-index="{{ index }}">
              <div class="fof-feature-card__media">
                {{ 'image' | placeholder_svg_tag: 'fof-placeholder' }}
              </div>
              <div class="fof-feature-card__content">
                <h3>{{ placeholder_title }}</h3>
                {% if placeholder_description != blank %}
                  <p>{{ placeholder_description }}</p>
                {% endif %}
              </div>
            </article>
          {% endfor %}
        {% endif %}
      </div>
    </div>
  </section>

  <section
    class="fof-contact"
    id="contact"
    {% if section.settings.contact_background %}
      style="--fof-contact-bg: url('{{ section.settings.contact_background | image_url: width: 2000 }}');"
    {% endif %}
  >
    <div class="fof-shell fof-contact__shell">
      <div class="fof-contact__copy">
        <span class="fof-kicker">{{ section.settings.contact_kicker | default: 'Let’s Talk Trucks' }}</span>
        <h2>{{ section.settings.contact_heading | default: 'Ready to build your perfect flatbed?' }}</h2>
        {% if section.settings.contact_body != blank %}
          <p>{{ section.settings.contact_body }}</p>
        {% endif %}
      </div>

      <div class="fof-contact__form">
        {% form 'contact', class: 'fof-form' %}
          {% if form.posted_successfully? %}
            <div class="fof-form__banner fof-form__banner--success" role="status">
              {{ 'templates.contact.form.post_success' | t }}
            </div>
          {% elsif form.errors %}
            <div class="fof-form__banner fof-form__banner--error" role="alert">
              {{ form.errors | default_errors }}
            </div>
          {% endif %}

          <div class="fof-form__fields">
            <label class="fof-field">
              <span>Name *</span>
              <input type="text" name="contact[name]" required maxlength="100" placeholder="Jane Doe">
            </label>
            <label class="fof-field">
              <span>Email *</span>
              <input type="email" name="contact[email]" required placeholder="name@email.com">
            </label>
            <label class="fof-field">
              <span>Phone</span>
              <input type="tel" name="contact[phone]" placeholder="(555) 123-4567">
            </label>
            <label class="fof-field">
              <span>Truck Make *</span>
              <input type="text" name="contact[truck_make]" required placeholder="Ford, Chevrolet, Ram...">
            </label>
            <label class="fof-field">
              <span>Model *</span>
              <input type="text" name="contact[truck_model]" required placeholder="F-350, Silverado, etc.">
            </label>
            <label class="fof-field">
              <span>Year *</span>
              <input type="number" name="contact[truck_year]" required min="1970" max="{{ 'now' | date: '%Y' }}" placeholder="2024">
            </label>
            <label class="fof-field fof-field--full">
              <span>Tell us about your build</span>
              <textarea name="contact[body]" rows="4" placeholder="Share how you plan to use your flatbed, any accessories, special requirements, or ideas."></textarea>
            </label>
          </div>

          <button type="submit" class="fof-form__submit">{{ section.settings.contact_button_label | default: 'Request Information' }}</button>
        {% endform %}
      </div>
    </div>
  </section>

</div>

{% stylesheet %}
  #shopify-section-group-header-group,
  #shopify-section-header {
    position: sticky;
    top: 0;
    z-index: 100;
    background: #f0f0f0;
    border-bottom: 1px solid rgba(31, 27, 23, 0.12);
  }

  .fof-page {
    background: #f5f1ea;
    color: #1f1b17;
    display: flex;
    flex-direction: column;
    gap: 120px;
  }

  .fof-shell {
    width: 100%;
    margin: 0;
    padding: 0 clamp(1.5rem, 4vw, 4rem);
  }

  .shopify-section > .fof-page {
    grid-column: 1 / -1;
  }

  .fof-kicker {
    display: inline-block;
    text-transform: uppercase;
    letter-spacing: 0.18em;
    font-size: 0.85rem;
    font-weight: 600;
    color: rgba(24, 21, 17, 0.7);
  }

  .fof-placeholder {
    width: 100%;
    height: 100%;
    background: #e5ded5;
  }

  /* Hero */
  .fof-hero {
    position: relative;
    min-height: 100svh;
    color: #f5f1ea;
    background: #13100d;
    overflow: hidden;
  }

  .fof-hero::after {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(180deg, rgba(12, 10, 8, 0) 0%, rgba(12, 10, 8, 0.65) 100%);
    z-index: 1;
  }

  .fof-hero__media {
    position: absolute;
    inset: 0;
    background: var(--fof-hero-image-mobile, var(--fof-hero-image, linear-gradient(135deg, #28231d, #120e0a)));
    background-size: cover;
    background-position: center 70%;
    z-index: 0;
  }

  .fof-hero__shell {
    position: relative;
    z-index: 2;
    min-height: 100svh;
    display: flex;
    align-items: flex-end;
    padding: clamp(3rem, 8vw, 6rem) clamp(2rem, 5vw, 5rem) clamp(5rem, 10vw, 8rem);
  }

  .fof-hero__headline {
    margin: 0;
    font-size: clamp(2rem, 6vw, 3.5rem);
    letter-spacing: 0.18em;
    text-transform: uppercase;
    width: 100%;
    text-align: left;
  }

  /* About */
  .fof-about {
    position: relative;
    color: #1f1b17;
  }

  .fof-about__intro {
    display: grid;
    gap: clamp(24px, 5vw, 40px);
    margin-bottom: clamp(48px, 8vw, 72px);
    padding: clamp(24px, 5vw, 40px);
    border-radius: 36px;
    background: rgba(255, 255, 255, 0.72);
    box-shadow: 0 24px 48px rgba(23, 20, 16, 0.14);
  }

  .fof-about__intro--has-media {
    grid-template-columns: minmax(0, 1.05fr) minmax(0, 1fr);
    align-items: center;
  }

  .fof-about__intro-media {
    border-radius: 28px;
    overflow: hidden;
    box-shadow: 0 26px 44px rgba(23, 20, 16, 0.18);
  }

  .fof-about__intro-media img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .fof-about__intro-content {
    display: grid;
    gap: 20px;
    max-width: 620px;
  }

  .fof-about__intro-content h2 {
    margin: 0;
    font-size: clamp(2rem, 5vw, 3rem);
  }

  .fof-about__intro-content p {
    margin: 0;
    font-size: 1.05rem;
    line-height: 1.7;
    color: rgba(31, 27, 23, 0.78);
  }

  .fof-about__metrics {
    display: grid;
    grid-auto-flow: column;
    gap: clamp(16px, 4vw, 40px);
    align-items: start;
  }

  .fof-about__metric {
    display: grid;
    gap: 6px;
  }

  .fof-about__metric-value {
    font-size: clamp(1.8rem, 4vw, 2.6rem);
    font-weight: 700;
    letter-spacing: 0.02em;
  }

  .fof-about__metric-label {
    text-transform: uppercase;
    letter-spacing: 0.12em;
    font-size: 0.78rem;
    color: rgba(31, 27, 23, 0.65);
  }

  .fof-about__stories {
    display: grid;
    gap: clamp(32px, 6vw, 64px);
  }

  .fof-about__story {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: clamp(24px, 4vw, 48px);
    align-items: center;
  }

  .fof-about__story--image-right .fof-about__story-media {
    order: 2;
  }

  .fof-about__story-media img {
    width: 100%;
    border-radius: 28px;
    display: block;
    box-shadow: 0 24px 40px rgba(23, 20, 16, 0.16);
  }

  .fof-about__story-content {
    background: rgba(255, 255, 255, 0.9);
    border-radius: 32px;
    padding: clamp(24px, 5vw, 44px);
    box-shadow: 0 16px 36px rgba(23, 20, 16, 0.12);
    display: grid;
    gap: 16px;
    justify-items: start;
    text-align: left;
  }

  .fof-about__story--image-right .fof-about__story-content {
    order: 1;
  }

  .fof-about__story-content h3 {
    margin: 0;
    font-size: 1.6rem;
  }

  .fof-about__story-content p {
    margin: 0;
    line-height: 1.6;
    color: rgba(31, 27, 23, 0.78);
  }

  .fof-about__stat {
    display: inline-flex;
    align-items: center;
    padding: 10px 16px;
    border-radius: 999px;
    background: rgba(31, 27, 23, 0.1);
    font-weight: 600;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    font-size: 0.78rem;
  }

  /* Features */
  .fof-features {
    margin-top: clamp(48px, 8vw, 96px);
    padding: clamp(72px, 10vw, 128px) 0;
    background: #f5f1eb;
  }

  .fof-features__shell {
    display: grid;
    gap: clamp(32px, 6vw, 64px);
  }

  .fof-features__title h2 {
    margin: 0;
    font-size: clamp(2rem, 4vw, 2.6rem);
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: rgba(31, 27, 23, 0.72);
  }

  .fof-features__head {
    display: grid;
    gap: 18px;
    max-width: 640px;
  }

  .fof-features__head h3 {
    margin: 0;
    font-size: clamp(2rem, 5vw, 3rem);
    color: #1f1b17;
  }

  .fof-features__tagline {
    font-weight: 600;
  }

  .fof-features__head p {
    margin: 0;
    line-height: 1.6;
    color: rgba(31, 27, 23, 0.75);
  }

  .fof-features__grid {
    margin-top: 48px;
    display: grid;
    gap: 24px;
    grid-template-columns: repeat(6, minmax(0, 1fr));
    grid-auto-rows: minmax(140px, auto);
    grid-auto-flow: dense;
  }

  .fof-feature-card {
    background: #ffffff;
    border-radius: 24px;
    overflow: hidden;
    display: grid;
    grid-template-rows: auto 1fr;
    box-shadow: 0 22px 40px rgba(23, 20, 16, 0.12);
    grid-column: span 3;
    grid-row: span 2;
  }

  .fof-feature-card--small {
    grid-column: span 2;
    grid-row: span 2;
  }

  .fof-feature-card--medium {
    grid-column: span 3;
    grid-row: span 2;
  }

  .fof-feature-card--large {
    grid-column: span 4;
    grid-row: span 3;
  }

  .fof-feature-card--placeholder svg {
    height: 100%;
    width: 100%;
    object-fit: cover;
  }

  .fof-feature-card__media {
    position: relative;
    padding-bottom: 60%;
    overflow: hidden;
  }

  .fof-feature-card__media img,
  .fof-feature-card__media svg {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .fof-feature-card__content {
    padding: 24px;
    display: grid;
    gap: 10px;
  }

  .fof-feature-card__content h3 {
    margin: 0;
    font-size: 1.3rem;
  }

  .fof-feature-card__content p {
    margin: 0;
    color: rgba(31, 27, 23, 0.75);
    line-height: 1.5;
  }

  @media (max-width: 900px) {
    .fof-features__grid {
      grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
      grid-auto-rows: auto;
    }

    .fof-feature-card,
    .fof-feature-card--small,
    .fof-feature-card--medium,
    .fof-feature-card--large {
      grid-column: auto;
      grid-row: auto;
    }

    .fof-feature-card__media {
      padding-bottom: 56%;
    }
  }

  /* Contact */
  .fof-contact {
    background: linear-gradient(135deg, rgba(23, 20, 16, 0.9), rgba(38, 34, 30, 0.85)), var(--fof-contact-bg, none);
    background-size: cover;
    background-position: center;
    color: #fdf8f1;
    padding: clamp(64px, 12vw, 120px) 0;
  }

  .fof-contact__shell {
    display: grid;
    gap: clamp(40px, 8vw, 80px);
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    align-items: start;
  }

  .fof-contact__copy {
    display: grid;
    gap: 20px;
    max-width: 520px;
  }

  .fof-contact__copy h2 {
    margin: 0;
    font-size: clamp(2rem, 5vw, 3rem);
  }

  .fof-contact__copy p {
    margin: 0;
    line-height: 1.7;
    color: rgba(253, 248, 241, 0.82);
  }

  .fof-form {
    background: rgba(17, 15, 13, 0.75);
    border-radius: 28px;
    padding: clamp(24px, 6vw, 40px);
    display: grid;
    gap: 24px;
    box-shadow: 0 22px 36px rgba(0, 0, 0, 0.35);
  }

  .fof-form__banner {
    padding: 12px 16px;
    border-radius: 12px;
    font-size: 0.95rem;
  }

  .fof-form__banner--success {
    background: rgba(80, 160, 120, 0.25);
    border: 1px solid rgba(80, 160, 120, 0.4);
  }

  .fof-form__banner--error {
    background: rgba(200, 80, 60, 0.25);
    border: 1px solid rgba(200, 80, 60, 0.45);
  }

  .fof-form__fields {
    display: grid;
    gap: 18px;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  }

  .fof-field {
    display: grid;
    gap: 8px;
    font-size: 0.95rem;
  }

  .fof-field span {
    font-weight: 600;
    letter-spacing: 0.04em;
  }

  .fof-field input,
  .fof-field textarea {
    border: 1px solid rgba(253, 248, 241, 0.2);
    border-radius: 12px;
    padding: 14px 16px;
    background: rgba(12, 11, 10, 0.75);
    color: inherit;
  }

  .fof-field input:focus,
  .fof-field textarea:focus {
    outline: 2px solid rgba(253, 248, 241, 0.8);
    outline-offset: 2px;
  }

  .fof-field textarea {
    resize: vertical;
  }

  .fof-field.fof-field--full {
    grid-column: 1 / -1;
  }

  .fof-form__submit {
    justify-self: flex-start;
    padding: 16px 32px;
    border-radius: 16px;
    border: none;
    text-transform: uppercase;
    letter-spacing: 0.16em;
    font-weight: 600;
    background: #f5f1ea;
    color: #13100d;
    cursor: pointer;
    transition: transform 0.2s ease;
  }

  .fof-form__submit:hover,
  .fof-form__submit:focus-visible {
    transform: translateY(-1px);
  }

  /* Responsive adjustments */
  @media (max-width: 1100px) {
    .fof-page {
      gap: 96px;
    }

    .fof-about__story-content {
      backdrop-filter: blur(12px);
    }
  }

  @media (max-width: 768px) {
    .fof-page {
      gap: 72px;
    }

    .fof-about__intro {
      grid-template-columns: 1fr;
    }

    .fof-about__metrics {
      grid-auto-flow: row;
    }

    .fof-hero__headline {
      letter-spacing: 0.1em;
    }

    .fof-hero,
    .fof-hero__shell {
      min-height: 100vh;
    }

    .fof-hero__media {
      background-position: center 80%;
    }

    .fof-about__story {
      grid-template-columns: 1fr;
      gap: 24px;
    }

    .fof-about__story--image-right .fof-about__story-media {
      order: 0;
    }

  }

  @media (prefers-reduced-motion: reduce) {
    .fof-form__submit {
      transition: none;
    }
  }

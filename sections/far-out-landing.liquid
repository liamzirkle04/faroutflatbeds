{% liquid
  assign hero_image = section.settings.hero_image
  assign hero_image_mobile = section.settings.hero_image_mobile
  assign hero_heading = section.settings.hero_heading | default: 'MORE THAN A FLATBED'
  assign hero_background_url = 'GasStation.jpg' | asset_url
  assign hero_background_mobile_url = hero_background_url

  if hero_image
    assign hero_background_url = hero_image | image_url: width: 2600
  endif

  if hero_image_mobile
    assign hero_background_mobile_url = hero_image_mobile | image_url: width: 1400
  elsif hero_image
    assign hero_background_mobile_url = hero_background_url
  endif

  assign about_heading_primary = section.settings.about_story_heading_primary | default: 'Born from experience'
  assign about_heading_secondary = section.settings.about_story_heading_secondary | default: 'What makes us different'
  assign about_image = section.settings.about_image
  assign about_image_alt = section.settings.about_image_alt | default: section.settings.about_heading
  assign about_image_alt = about_image_alt | strip | escape
  assign about_narrative_image = section.settings.about_narrative_image
  assign about_narrative_image_alt = section.settings.about_narrative_image_alt | default: about_heading_secondary
  assign about_narrative_image_alt = about_narrative_image_alt | strip | escape
  assign about_heading_default = 'sections.about.subtitle' | t
  assign about_intro_default = ''
  assign about_intro_primary = 'sections.about.description' | t
  assign about_intro_secondary = 'sections.about.description_additional_one' | t
  assign about_intro_tertiary = 'sections.about.description_additional_two' | t
  assign about_intro_quaternary = 'sections.about.description_additional_three' | t
  if about_intro_primary != blank
    assign about_intro_default = about_intro_default | append: '<p>' | append: about_intro_primary | append: '</p>'
  endif
  if about_intro_secondary != blank
    assign about_intro_default = about_intro_default | append: '<p>' | append: about_intro_secondary | append: '</p>'
  endif
  if about_intro_tertiary != blank
    assign about_intro_default = about_intro_default | append: '<p>' | append: about_intro_tertiary | append: '</p>'
  endif
  if about_intro_quaternary != blank
    assign about_intro_default = about_intro_default | append: '<p>' | append: about_intro_quaternary | append: '</p>'
  endif
  assign about_intro_default = about_intro_default | strip
  assign about_heading_text = section.settings.about_heading | default: about_heading_default
  assign about_intro_content = section.settings.about_intro | default: about_intro_default
  assign about_narrative_heading_default = 'sections.about.narrative_heading' | t
  assign about_narrative_body_default = 'sections.about.narrative_body' | t
  if about_narrative_body_default != blank
    assign about_narrative_body_default = '<p>' | append: about_narrative_body_default | append: '</p>'
  endif
  assign about_narrative_heading_text = section.settings.about_narrative_heading | default: about_narrative_heading_default
  assign about_narrative_body_content = section.settings.about_narrative_body | default: about_narrative_body_default

  assign metric_blocks = section.blocks | where: 'type', 'about_metric'
  assign story_blocks = section.blocks | where: 'type', 'story_block'
  assign feature_blocks = section.blocks | where: 'type', 'feature_card'
  assign featured_product_handle = section.settings.featured_product
  assign landing_product = blank
  if featured_product_handle != blank
    assign landing_product = all_products[featured_product_handle]
  endif
  assign landing_product_secondary_handle = section.settings.landing_product_secondary
  assign landing_product_tertiary_handle = section.settings.landing_product_tertiary
  assign landing_product_handles_raw = ''
  if featured_product_handle != blank
    assign landing_product_handles_raw = landing_product_handles_raw | append: featured_product_handle | append: '|'
  endif
  if landing_product_secondary_handle != blank
    assign landing_product_handles_raw = landing_product_handles_raw | append: landing_product_secondary_handle | append: '|'
  endif
  if landing_product_tertiary_handle != blank
    assign landing_product_handles_raw = landing_product_handles_raw | append: landing_product_tertiary_handle | append: '|'
  endif
  assign landing_product_handles = landing_product_handles_raw | split: '|'
  assign landing_product_count = 0
  for handle in landing_product_handles
    assign handle_clean = handle | strip
    if handle_clean != blank
      assign landing_product_count = landing_product_count | plus: 1
    endif
  endfor
  assign landing_product_title_default = 'sections.landing_product.title' | t
  assign landing_product_body_default = 'sections.landing_product.body' | t
  assign landing_product_button_default = 'sections.landing_product.button' | t
  assign landing_product_sold_out_default = 'sections.landing_product.sold_out' | t
  assign landing_product_select_variant_default = 'sections.landing_product.select_variant' | t
  assign landing_product_quantity_default = 'sections.landing_product.quantity_label' | t
%}

<div class="fof-page" id="top" data-section-id="{{ section.id }}">
  <section
    class="fof-hero"
    style="--fof-hero-image: url('{{ hero_background_url }}');"
  >
    <div
      class="fof-hero__media"
      style="--fof-hero-image-mobile: url('{{ hero_background_mobile_url }}');"
    ></div>
    <div class="fof-shell fof-hero__shell">
      <h1 class="fof-hero__headline">{{ hero_heading | escape }}</h1>
    </div>
  </section>

  <section
    class="fof-about"
    id="about"
    style="--fof-about-bg: url('{{ 'DRL.jpg' | asset_url }}');"
  >
    <div class="fof-shell fof-about__shell">
      <div class="fof-about__heading">
        <h2 class="fof-heading-xxl">{{ 'sections.about.title' | t }}</h2>
      </div>
        <div class="fof-about__intro fof-about__intro--has-media">
          <div class="fof-about__intro-media">
          {% if about_image %}
            {{ about_image
              | image_url: width: 1400
              | image_tag:
                alt: about_image_alt,
                loading: 'lazy',
                widths: '700, 1000, 1400'
            }}
          {% else %}
            <img
              src="{{ 'DI5.jpg' | asset_url }}"
              alt="{{ about_image_alt }}"
              width="4672"
              height="7008"
              loading="lazy"
              class="fof-about__intro-media-fallback"
              >
            {% endif %}
          </div>
          <div class="fof-about__intro-content">
            <h3 class="fof-heading-lg">{{ about_heading_text }}</h3>
            <div class="fof-richtext">
              {{ about_intro_content }}
            </div>
            {% if metric_blocks.size > 0 %}
              <div class="fof-about__metrics">
                {% for block in metric_blocks %}
                  {% assign metric_value = block.settings.value %}
                  {% assign metric_label = block.settings.label %}
                  <div class="fof-about__metric" {{ block.shopify_attributes }}>
                    {% if metric_value != blank %}
                      <span class="fof-about__metric-value">{{ metric_value }}</span>
                    {% endif %}
                    {% if metric_label != blank %}
                      <span class="fof-about__metric-label">{{ metric_label }}</span>
                    {% endif %}
                  </div>
                {% endfor %}
              </div>
            {% endif %}
          </div>
        </div>

      {% if story_blocks.size > 0 %}
        <div class="fof-about__stories">
          {% for block in story_blocks %}
            {% liquid
              assign position_class = 'fof-about__story--image-left'
              assign index_modulo = forloop.index0 | modulo: 2
              if index_modulo == 1
                assign position_class = 'fof-about__story--image-right'
              endif
              assign story_alt = block.settings.image_alt | default: block.settings.heading
              assign story_alt = story_alt | strip
              assign story_alt = story_alt | escape
            %}
            <article class="fof-about__story {{ position_class }}" {{ block.shopify_attributes }}>
              <div class="fof-about__story-media">
                {% if block.settings.image %}
                  {{ block.settings.image
                    | image_url: width: 1100
                    | image_tag:
                      alt: story_alt,
                      loading: 'lazy',
                      widths: '550, 750, 1100'
                  }}
                {% else %}
                  {{ 'image' | placeholder_svg_tag: 'fof-placeholder' }}
                {% endif %}
              </div>
              <div class="fof-about__story-content">
                {% assign story_heading = block.settings.heading %}
                {% if forloop.index == 1 %}
                  {% assign story_heading = about_heading_primary %}
                {% elsif forloop.index == 2 %}
                  {% assign story_heading = about_heading_secondary %}
                {% endif %}
                <h4 class="fof-heading-md">{{ story_heading }}</h4>
                {% if block.settings.body != blank %}
                  <div class="fof-richtext fof-about__story-body">
                    {{ block.settings.body }}
                  </div>
                {% endif %}
                {% if block.settings.highlight != blank %}
                  <div class="fof-about__stat">
                    <span>{{ block.settings.highlight }}</span>
                  </div>
                {% endif %}
              </div>
            </article>
          {% endfor %}
        </div>
      {% endif %}

      <div class="fof-about__narrative">
        <div class="fof-about__narrative-content">
          <div class="fof-about__narrative-head">
            <h3 class="fof-heading-lg">{{ about_narrative_heading_text }}</h3>
          </div>
          <div class="fof-richtext">
            {{ about_narrative_body_content }}
          </div>
        </div>
        <div class="fof-about__narrative-media">
          {% if about_narrative_image %}
            {{ about_narrative_image
              | image_url: width: 1400
              | image_tag:
                alt: about_narrative_image_alt,
                loading: 'lazy',
                widths: '700, 1000, 1400'
            }}
          {% else %}
            <img
              src="{{ 'GFCfar.jpg' | asset_url }}"
              alt="{{ about_narrative_image_alt }}"
              width="4672"
              height="7008"
              loading="lazy"
              class="fof-about__narrative-media-fallback"
            >
          {% endif %}
        </div>
      </div>
    </div>
  </section>

  {% if landing_product_count > 0 %}
    {% liquid
      assign landing_product_title = section.settings.landing_product_title | default: landing_product_title_default
      assign landing_product_body = section.settings.landing_product_body | default: landing_product_body_default
      assign landing_product_button = section.settings.landing_product_button | default: landing_product_button_default
      assign landing_product_body_paragraphs = landing_product_body | split: '\n\n'
    %}
    <section class="fof-product fof-product--multi" id="shop">
      <div class="fof-shell fof-product__shell">
        <div class="fof-product__intro">
          <span class="fof-kicker">{{ section.settings.about_kicker | default: 'Born From The Trail' }}</span>
          <h2>{{ landing_product_title }}</h2>
          {% if landing_product_body != blank %}
            <div class="fof-product__description">
              {% for paragraph in landing_product_body_paragraphs %}
                {% assign paragraph_clean = paragraph | strip %}
                {% if paragraph_clean != blank %}
                  <p>{{ paragraph_clean }}</p>
                {% endif %}
              {% endfor %}
            </div>
          {% endif %}
        </div>
        <div class="fof-product-grid">
          {% for handle in landing_product_handles limit: 3 %}
            {% assign handle_clean = handle | strip %}
            {% if handle_clean == blank %}
              {% continue %}
            {% endif %}
            {% assign card_product = all_products[handle_clean] %}
            {% assign card_image = nil %}
            {% assign card_image_alt = nil %}
            {% assign has_compare_price = false %}
            {% if card_product %}
              {% if card_product.featured_image %}
                {% assign card_image = card_product.featured_image %}
                {% assign card_image_alt = card_image.alt | default: card_product.title %}
              {% endif %}
              {% assign card_excerpt = card_product.description | strip_html | truncatewords: 30 %}
              {% assign card_price = card_product.price | money %}
              {% if card_product.compare_at_price_max > card_product.price %}
                {% assign has_compare_price = true %}
              {% endif %}
            {% else %}
              {% assign card_excerpt = 'sections.landing_product.placeholder_body' | t %}
              {% assign card_price = '' %}
              {% assign has_compare_price = false %}
            {% endif %}
            {% assign card_image_alt = card_image_alt | default: 'sections.landing_product.placeholder_title' | t %}
            {% assign card_image_alt_clean = card_image_alt | strip | escape %}
            <article class="fof-product-card">
              {% if card_product %}
                <a href="{{ card_product.url }}" class="fof-product-card__media">
                  {% if card_image %}
                    {{ card_image
                      | image_url: width: 1200
                      | image_tag:
                        alt: card_image_alt_clean,
                        loading: 'lazy',
                        widths: '600, 900, 1200'
                    }}
                  {% else %}
                    <img
                      src="{{ 'GFCopen2.jpg' | asset_url }}"
                      alt="{{ card_image_alt_clean }}"
                      width="4672"
                      height="7008"
                      loading="lazy"
                    >
                  {% endif %}
                </a>
              {% else %}
                <div class="fof-product-card__media">
                  <img
                    src="{{ 'GFCopen2.jpg' | asset_url }}"
                    alt="{{ card_image_alt_clean }}"
                    width="4672"
                    height="7008"
                    loading="lazy"
                  >
                </div>
              {% endif %}
              <div class="fof-product-card__content">
                {% if card_product %}
                  <h3>
                    <a href="{{ card_product.url }}">{{ card_product.title }}</a>
                  </h3>
                {% else %}
                  <h3>{{ 'sections.landing_product.placeholder_title' | t }}</h3>
                {% endif %}
                {% if card_excerpt != blank %}
                  <p class="fof-product-card__excerpt">{{ card_excerpt }}</p>
                {% endif %}
                <div class="fof-product-card__meta">
                  {% if card_product %}
                    <div class="fof-product-card__price">
                      {{ card_price }}
                      {% if has_compare_price %}
                        <span class="fof-product__price--compare">
                          {{ card_product.compare_at_price_max | money }}
                        </span>
                      {% endif %}
                    </div>
                    {% if card_product.available %}
                      <a href="{{ card_product.url }}" class="fof-product-card__button">
                        {{ landing_product_button }}
                      </a>
                    {% else %}
                      <span class="fof-product-card__status">{{ landing_product_sold_out_default }}</span>
                    {% endif %}
                  {% else %}
                    <span class="fof-product-card__status">{{ 'sections.landing_product.placeholder_body' | t }}</span>
                  {% endif %}
                </div>
              </div>
            </article>
          {% endfor %}
        </div>
      </div>
    </section>
  {% elsif landing_product %}
    {% liquid
      assign landing_product_title = section.settings.landing_product_title | default: landing_product_title_default
      assign landing_product_body = section.settings.landing_product_body | default: landing_product_body_default
      assign landing_product_button = section.settings.landing_product_button | default: landing_product_button_default
      assign landing_product_body_paragraphs = landing_product_body | split: '\n\n'
      assign product_image_setting = section.settings.landing_product_image
      assign product_image_alt = section.settings.landing_product_image_alt | default: landing_product.title
      assign product_image_fallback = blank

      if product_image_setting != blank
        assign product_image = product_image_setting
      elsif landing_product.featured_image
        assign product_image = landing_product.featured_image
        assign product_image_alt = product_image.alt | default: product_image_alt
      else
        assign product_image = nil
        assign product_image_fallback = 'GFCopen2.jpg'
      endif

      assign product_image_alt = product_image_alt | strip | escape
      assign primary_variant = landing_product.selected_or_first_available_variant
    %}
    <section class="fof-product" id="shop">
      <div class="fof-shell fof-product__shell">
        <div class="fof-product__media">
          {% if product_image %}
            {{ product_image
              | image_url: width: 1800
              | image_tag:
                alt: product_image_alt,
                loading: 'lazy',
                widths: '900, 1200, 1800'
            }}
          {% elsif product_image_fallback != blank %}
            <img
              src="{{ product_image_fallback | asset_url }}"
              alt="{{ product_image_alt }}"
              width="4672"
              height="7008"
              loading="lazy"
            >
          {% else %}
            {{ 'image' | placeholder_svg_tag: 'fof-placeholder' }}
          {% endif %}
        </div>
        <div class="fof-product__content">
          <span class="fof-kicker">{{ section.settings.about_kicker | default: 'Born From The Trail' }}</span>
          <h2>{{ landing_product_title }}</h2>
          {% if landing_product_body != blank %}
            <div class="fof-product__description">
              {% for paragraph in landing_product_body_paragraphs %}
                {% assign paragraph_clean = paragraph | strip %}
                {% if paragraph_clean != blank %}
                  <p>{{ paragraph_clean }}</p>
                {% endif %}
              {% endfor %}
            </div>
          {% endif %}
          {% if primary_variant %}
            <div class="fof-product__price">
              {{ primary_variant.price | money }}
              {% if primary_variant.compare_at_price > primary_variant.price %}
                <span class="fof-product__price--compare">{{ primary_variant.compare_at_price | money }}</span>
              {% endif %}
            </div>
            {% form 'product', landing_product, class: 'fof-product__form', novalidate: 'novalidate' %}
              {% if landing_product.has_only_default_variant %}
                <input type="hidden" name="id" value="{{ primary_variant.id }}">
              {% else %}
                <label class="fof-product__field">
                  <span>{{ landing_product_select_variant_default }}</span>
                  <select name="id">
                    {% for variant in landing_product.variants %}
                      <option
                        value="{{ variant.id }}"
                        {% if variant.id == primary_variant.id %}selected{% endif %}
                        {% unless variant.available %}disabled{% endunless %}
                      >
                        {{ variant.title }} — {{ variant.price | money }}
                      </option>
                    {% endfor %}
                  </select>
                </label>
              {% endif %}
              <label class="fof-product__field fof-product__field--inline">
                <span>{{ landing_product_quantity_default }}</span>
                <input type="number" name="quantity" min="1" value="1" inputmode="numeric" pattern="[0-9]*">
              </label>
              {% if primary_variant.available %}
                <button type="submit" class="fof-product__submit">
                  {{ landing_product_button }}
                </button>
              {% else %}
                <button type="button" class="fof-product__submit" disabled>
                  {{ landing_product_sold_out_default }}
                </button>
              {% endif %}
            {% endform %}
          {% else %}
            <p class="fof-product__unavailable">{{ landing_product_sold_out_default }}</p>
          {% endif %}
          <div class="fof-product__placeholder-cta">
            <button type="button" class="fof-product__submit fof-product__submit--placeholder">
              {{ 'landing_product.placeholder_cta' | t }}
            </button>
          </div>
        </div>
      </div>
    </section>
  {% endif %}

  <section class="fof-features" id="features">
    <div class="fof-shell fof-features__shell">
      <div class="fof-features__title">
        <h2>{{ 'sections.features.title' | t }}</h2>
      </div>
      <div class="fof-features__grid">
        {% for block in feature_blocks %}
          {% capture title_key %}sections.features.cards.{{ forloop.index }}.title{% endcapture %}
          {% capture description_key %}sections.features.cards.{{ forloop.index }}.description{% endcapture %}
          {% assign default_title = title_key | t %}
          {% assign default_description = description_key | t %}
          {% liquid
            assign feature_title = block.settings.title | default: default_title
            assign feature_description = block.settings.description | default: default_description
            assign feature_image = block.settings.image
            assign feature_image_alt = block.settings.image_alt | default: block.settings.title | default: default_title
            assign feature_image_alt = feature_image_alt | strip | escape
            assign column_span = block.settings.column_span | default: 3 | abs
            assign row_span = block.settings.row_span | default: 2 | abs
            if column_span < 1
              assign column_span = 1
            endif
            if column_span > 6
              assign column_span = 6
            endif
            if row_span < 1
              assign row_span = 1
            endif
            if row_span > 6
              assign row_span = 6
            endif
            assign feature_background = ''
            if feature_image
              assign feature_background = feature_image | image_url: width: 1600
            else
              assign feature_title_handle = feature_title | strip | handleize
              if feature_title_handle == 'bolt-together-design'
                assign feature_background = 'DI3.jpg' | asset_url
              endif
            endif
            assign feature_styles = "grid-column: span " | append: column_span | append: "; grid-row: span " | append: row_span | append: ";"
            if feature_background != blank
              assign feature_styles = feature_styles | append: " background-image: url('" | append: feature_background | append: "');"
            endif
          %}
          <article
            class="fof-feature-card"
            style="{{ feature_styles }}"
            {{ block.shopify_attributes }}
          >
            {% if feature_image %}
              <div class="fof-feature-card__media">
                {{ feature_image
                  | image_url: width: 1600
                  | image_tag:
                    alt: feature_image_alt,
                    loading: 'lazy',
                    widths: '600, 900, 1200, 1600',
                    class: 'fof-feature-card__image'
                }}
              </div>
            {% endif %}
            <div class="fof-feature-card__content">
              <h3>{{ feature_title }}</h3>
              {% if feature_description != blank %}
                <p>{{ feature_description }}</p>
              {% endif %}
            </div>
          </article>
        {% endfor %}
      </div>
    </div>
  </section>

  <section
    class="fof-contact"
    id="contact"
    {% if section.settings.contact_background %}
      style="--fof-contact-bg: url('{{ section.settings.contact_background | image_url: width: 2000 }}');"
    {% endif %}
  >
    <div class="fof-shell fof-contact__shell">
      <div class="fof-contact__copy">
        <span class="fof-kicker">{{ section.settings.contact_kicker | default: 'Let’s Talk Trucks' }}</span>
        <h2>{{ section.settings.contact_heading | default: 'Ready to build your perfect flatbed?' }}</h2>
        {% if section.settings.contact_body != blank %}
          <p>{{ section.settings.contact_body }}</p>
        {% endif %}
      </div>

      <div class="fof-contact__form">
        {% form 'contact', class: 'fof-form' %}
          {% if form.posted_successfully? %}
            <div class="fof-form__banner fof-form__banner--success" role="status">
              {{ 'templates.contact.form.post_success' | t }}
            </div>
          {% elsif form.errors %}
            <div class="fof-form__banner fof-form__banner--error" role="alert">
              {{ form.errors | default_errors }}
            </div>
          {% endif %}

          <div class="fof-form__fields">
            <label class="fof-field">
              <span>Name *</span>
              <input type="text" name="contact[name]" required maxlength="100" placeholder="Jane Doe">
            </label>
            <label class="fof-field">
              <span>Email *</span>
              <input type="email" name="contact[email]" required placeholder="name@email.com">
            </label>
            <label class="fof-field">
              <span>Phone</span>
              <input type="tel" name="contact[phone]" placeholder="(555) 123-4567">
            </label>
            <label class="fof-field">
              <span>Truck Make *</span>
              <input type="text" name="contact[truck_make]" required placeholder="Ford, Chevrolet, Ram...">
            </label>
            <label class="fof-field">
              <span>Model *</span>
              <input type="text" name="contact[truck_model]" required placeholder="F-350, Silverado, etc.">
            </label>
            <label class="fof-field">
              <span>Year *</span>
              <input type="number" name="contact[truck_year]" required min="1970" max="{{ 'now' | date: '%Y' }}" placeholder="2024">
            </label>
            <label class="fof-field fof-field--full">
              <span>Tell us about your build</span>
              <textarea name="contact[body]" rows="4" placeholder="Share how you plan to use your flatbed, any accessories, special requirements, or ideas."></textarea>
            </label>
          </div>

          <button type="submit" class="fof-form__submit">{{ section.settings.contact_button_label | default: 'Request Information' }}</button>
        {% endform %}
      </div>
    </div>
  </section>

</div>

{% stylesheet %}
  .fof-page {
    background: #f5f1ea;
    color: #1f1b17;
    display: flex;
    flex-direction: column;
    gap: 0;
    position: relative;
    padding-top: 100vh;
  }

  .fof-shell {
    width: 100%;
    margin: 0;
    padding: 0 clamp(1.5rem, 4vw, 4rem);
  }

  .shopify-section > .fof-page {
    grid-column: 1 / -1;
  }

  .fof-kicker {
    display: inline-block;
    text-transform: uppercase;
    letter-spacing: 0.18em;
    font-size: 0.85rem;
    font-weight: 600;
    color: rgba(24, 21, 17, 0.7);
  }

  .fof-placeholder {
    width: 100%;
    height: 100%;
    background: #e5ded5;
  }

  /* Hero */
  .fof-hero {
    position: fixed;
    inset: 0;
    width: 100%;
    height: 100vh;
    color: #f5f1ea;
    background: #13100d;
    overflow: hidden;
    z-index: 0;
    pointer-events: none;
  }

  .fof-hero::after {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(180deg, rgba(12, 10, 8, 0) 0%, rgba(12, 10, 8, 0.65) 100%);
    z-index: 1;
    pointer-events: none;
  }

  .fof-hero__media {
    position: absolute;
    inset: 0;
    background: var(--fof-hero-image-mobile, var(--fof-hero-image, linear-gradient(135deg, #28231d, #120e0a)));
    background-size: cover;
    background-position: center 70%;
    z-index: 0;
  }

  .fof-hero__shell {
    position: relative;
    z-index: 2;
    height: 100%;
    min-height: 100%;
    display: flex;
    align-items: flex-end;
    padding: clamp(2rem, 6vw, 4rem) clamp(2rem, 5vw, 5rem) clamp(3rem, 8vw, 6rem);
    pointer-events: auto;
  }

  .fof-hero__headline {
    margin: 0;
    font-size: clamp(2rem, 6vw, 3.5rem);
    letter-spacing: 0.18em;
    text-transform: uppercase;
    width: 100%;
    text-align: left;
  }

  /* About */
  .fof-page > section:not(.fof-hero) {
    position: relative;
    z-index: 3;
  }

  .fof-about {
    position: relative;
    color: #ffffff;
    padding: clamp(60px, 8vw, 120px) 0;
    min-height: clamp(600px, 100vh, 900px);
    background: transparent;
    isolation: isolate;
    --fof-about-card-padding: clamp(36px, 6vw, 60px);
    background-color: #f5f1ea;
  }

  .fof-about::before {
    content: '';
    position: absolute;
    inset: 0;
    background:
      linear-gradient(180deg, rgba(19, 16, 13, 0.2) 0%, rgba(19, 16, 13, 0.7) 100%),
      var(--fof-about-bg, #f5f1ea);
    background-size: cover;
    background-position: center 65%;
    opacity: 0.9;
    z-index: -1;
  }

  .fof-about__shell {
    position: relative;
    z-index: 1;
    display: grid;
    gap: clamp(32px, 6vw, 60px);
    min-height: 100%;
  }

  .fof-heading-xxl,
  .fof-heading-lg,
  .fof-heading-md {
    margin: 0;
    font-weight: 700;
    letter-spacing: 0.02em;
  }

  .fof-heading-xxl {
    font-size: clamp(2.6rem, 6vw, 4rem);
    text-transform: uppercase;
    letter-spacing: 0.18em;
  }

  .fof-heading-lg {
    font-size: clamp(2rem, 5vw, 3rem);
  }

  .fof-heading-md {
    font-size: clamp(1.4rem, 3.6vw, 2rem);
  }

  .fof-richtext {
    display: grid;
    gap: clamp(12px, 2vw, 20px);
  }

  .fof-richtext > * {
    margin: 0;
  }

  .fof-about__heading {
    margin-bottom: clamp(20px, 4vw, 32px);
    text-align: center;
  }

  .fof-about__intro {
    display: grid;
    gap: clamp(20px, 3.5vw, 32px);
    margin: 0 auto clamp(24px, 5vw, 40px);
    max-width: min(1200px, 95%);
  }

  .fof-about__intro--has-media {
    gap: clamp(24px, 4vw, 48px);
  }

  @media (min-width: 900px) {
    .fof-about__intro--has-media {
      grid-template-columns: minmax(0, 0.85fr) minmax(0, 1.15fr);
      align-items: center;
    }
  }

  .fof-about__intro-media {
    border-radius: 28px;
    overflow: hidden;
    box-shadow: 0 26px 44px rgba(23, 20, 16, 0.18);
  }

  .fof-about__intro-media img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .fof-about__intro-media-fallback {
    width: 100%;
    height: auto;
  }

  .fof-about__intro-content {
    display: grid;
    gap: clamp(12px, 2vw, 20px);
    max-width: min(1040px, 100%);
  }

  .fof-about__intro-content .fof-richtext {
    color: #ffffff;
    font-size: 1.05rem;
    line-height: 1.7;
  }
  .fof-about__narrative {
    display: grid;
    gap: clamp(24px, 4vw, 48px);
    max-width: min(1200px, 95%);
    margin: 0 auto clamp(32px, 5vw, 60px);
    align-items: center;
  }

  @media (min-width: 900px) {
    .fof-about__narrative {
      grid-template-columns: minmax(0, 1.3fr) minmax(0, 0.7fr);
    }
  }

  .fof-about__narrative-content {
    display: grid;
    gap: clamp(12px, 2.5vw, 24px);
  }

  .fof-about__narrative-head {
    display: grid;
    gap: 14px;
    max-width: min(880px, 100%);
  }

  .fof-about__narrative-content .fof-richtext {
    color: rgba(245, 241, 234, 0.88);
    font-size: 1.05rem;
    line-height: 1.7;
  }

  .fof-about__narrative-media {
    border-radius: 28px;
    overflow: hidden;
    box-shadow: 0 26px 44px rgba(23, 20, 16, 0.18);
  }

  .fof-about__narrative-media img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .fof-about__narrative-media-fallback {
    width: 100%;
    height: auto;
  }

  @media (min-width: 900px) {
    .fof-about__intro-media {
      justify-self: start;
    }

    .fof-about__intro-content {
      justify-self: stretch;
    }

    .fof-about__narrative-content {
      justify-self: stretch;
    }

    .fof-about__narrative-media {
      justify-self: end;
    }
  }

  @media (min-width: 1100px) {
    .fof-about__intro-media {
      transform: translateX(-4%);
    }

    .fof-about__narrative-media {
      transform: translateX(4%);
    }
  }

  .fof-about__metrics {
    display: grid;
    grid-auto-flow: column;
    gap: clamp(16px, 4vw, 40px);
    align-items: start;
  }

  .fof-about__metric {
    display: grid;
    gap: 6px;
  }

  .fof-about__metric-value {
    font-size: clamp(1.8rem, 4vw, 2.6rem);
    font-weight: 700;
    letter-spacing: 0.02em;
  }

  .fof-about__metric-label {
    text-transform: uppercase;
    letter-spacing: 0.12em;
    font-size: 0.78rem;
    color: rgba(31, 27, 23, 0.65);
  }

  .fof-about__stories {
    display: grid;
    gap: clamp(32px, 6vw, 64px);
  }

  .fof-about__story {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: clamp(24px, 4vw, 48px);
    align-items: center;
  }

  .fof-about__story--image-right .fof-about__story-media {
    order: 2;
  }

  .fof-about__story-media img {
    width: 100%;
    border-radius: 28px;
    display: block;
    box-shadow: 0 24px 40px rgba(23, 20, 16, 0.16);
  }

  .fof-about__story-content {
    background: rgba(255, 255, 255, 0.9);
    border-radius: 32px;
    padding: clamp(24px, 5vw, 44px);
    box-shadow: 0 16px 36px rgba(23, 20, 16, 0.12);
    display: grid;
    gap: 16px;
    justify-items: start;
    text-align: left;
  }

  .fof-about__story-body {
    color: rgba(31, 27, 23, 0.8);
    font-size: 1rem;
    line-height: 1.6;
  }

  .fof-about__story--image-right .fof-about__story-content {
    order: 1;
  }

  .fof-about__story-content h3 {
    margin: 0;
    font-size: 1.6rem;
  }

  .fof-about__story-content p {
    margin: 0;
    line-height: 1.6;
    color: rgba(31, 27, 23, 0.78);
  }

  .fof-about__stat {
    display: inline-flex;
    align-items: center;
    padding: 10px 16px;
    border-radius: 999px;
    background: rgba(31, 27, 23, 0.1);
    font-weight: 600;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    font-size: 0.78rem;
  }

  /* Product */
  .fof-product {
    background: #efe6d8;
    padding: clamp(42px, 5.4vw, 64px) 0 clamp(28px, 4.5vw, 50px);
    border-top: 1px solid rgba(31, 27, 23, 0.12);
    border-bottom: 1px solid rgba(31, 27, 23, 0.1);
    min-height: clamp(620px, 90vh, 920px);
    display: flex;
    align-items: center;
  }

  .fof-product__shell {
    display: grid;
    gap: clamp(32px, 6vw, 64px);
    grid-template-columns: repeat(2, minmax(0, 1fr));
    align-items: center;
  }

  .fof-product__media {
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 18px 32px rgba(23, 20, 16, 0.12);
    min-height: clamp(320px, 50vw, 660px);
    height: 100%;
    max-height: 100%;
  }

  .fof-product__media img,
  .fof-product__media svg {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .fof-product__content {
    display: grid;
    gap: clamp(18px, 4vw, 28px);
  }

  .fof-product__content h2 {
    margin: 0;
    font-size: clamp(2.4rem, 6vw, 3.4rem);
  }

  .fof-product__description {
    display: grid;
    gap: 12px;
    color: rgba(31, 27, 23, 0.82);
    line-height: 1.7;
    font-size: 1.05rem;
  }

  .fof-product__price {
    display: flex;
    align-items: baseline;
    gap: 12px;
    font-size: clamp(1.6rem, 4vw, 2rem);
    font-weight: 700;
  }

  .fof-product__price--compare {
    font-size: clamp(1rem, 3vw, 1.2rem);
    color: rgba(31, 27, 23, 0.55);
    text-decoration: line-through;
    font-weight: 500;
  }

  .fof-product__form {
    display: grid;
    gap: 18px;
    max-width: 420px;
  }

  .fof-product__unavailable {
    margin: 0;
    font-size: 1.05rem;
    color: rgba(31, 27, 23, 0.7);
  }

  .fof-product__field {
    display: grid;
    gap: 8px;
  }

  .fof-product__field span {
    font-size: 0.82rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: rgba(31, 27, 23, 0.6);
    font-weight: 600;
  }

  .fof-product__field select,
  .fof-product__field input[type='number'] {
    appearance: none;
    border: 1px solid rgba(31, 27, 23, 0.18);
    border-radius: 14px;
    padding: 12px 16px;
    font-size: 1rem;
    background: #ffffff;
    color: #1f1b17;
  }

  .fof-product__field--inline {
    max-width: 120px;
  }

  .fof-product__field input[type='number']::-webkit-outer-spin-button,
  .fof-product__field input[type='number']::-webkit-inner-spin-button {
    margin: 0;
  }

  .fof-product__submit {
    appearance: none;
    border: none;
    border-radius: 999px;
    padding: 14px 28px;
    background: #1f1b17;
    color: #f5f1ea;
    font-weight: 600;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    cursor: pointer;
    transition: background 180ms ease, transform 180ms ease;
  }

  .fof-product__submit:hover:not([disabled]) {
    background: #2d2721;
    transform: translateY(-2px);
  }

  .fof-product__submit[disabled] {
    cursor: not-allowed;
    opacity: 0.55;
  }

  .fof-product__placeholder-cta {
    margin-top: 24px;
  }

  .fof-product__submit--placeholder {
    background: transparent;
    color: #1f1b17;
    border: 2px solid #1f1b17;
  }

  .fof-product__submit--placeholder:hover {
    background: #1f1b17;
    color: #f5f1ea;
  }

  .fof-product--multi {
    min-height: auto;
    padding-bottom: clamp(42px, 6vw, 72px);
  }

  .fof-product--multi .fof-product__shell {
    grid-template-columns: 1fr;
  }

  .fof-product__intro {
    display: grid;
    gap: clamp(18px, 4vw, 28px);
    max-width: 720px;
  }

  .fof-product-grid {
    display: grid;
    gap: clamp(24px, 5vw, 36px);
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
  }

  .fof-product-card {
    display: flex;
    flex-direction: column;
    min-height: 100%;
    background: #ffffff;
    border-radius: 18px;
    overflow: hidden;
    box-shadow: 0 14px 28px rgba(23, 20, 16, 0.08);
  }

  .fof-product-card__media {
    position: relative;
    display: block;
    aspect-ratio: 4 / 3;
    background: rgba(31, 27, 23, 0.04);
  }

  .fof-product-card__media img,
  .fof-product-card__media svg {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .fof-product-card__content {
    display: grid;
    gap: 16px;
    padding: clamp(20px, 4vw, 26px);
  }

  .fof-product-card__content h3 {
    margin: 0;
    font-size: 1.4rem;
  }

  .fof-product-card__excerpt {
    margin: 0;
    color: rgba(31, 27, 23, 0.75);
    line-height: 1.6;
    font-size: 0.98rem;
  }

  .fof-product-card__meta {
    display: flex;
    flex-wrap: wrap;
    gap: 14px;
    align-items: center;
    justify-content: space-between;
  }

  .fof-product-card__price {
    display: flex;
    align-items: baseline;
    gap: 10px;
    font-size: 1.4rem;
    font-weight: 700;
  }

  .fof-product-card__placeholder {
    margin: 0;
    color: rgba(31, 27, 23, 0.6);
    font-size: 0.95rem;
  }

  .fof-product-card__button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 6px;
    padding: 12px 24px;
    border-radius: 999px;
    background: #1f1b17;
    color: #f5f1ea;
    font-size: 0.85rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    text-decoration: none;
    transition: background 180ms ease, transform 180ms ease;
  }

  .fof-product-card__button:hover {
    background: #2d2721;
    transform: translateY(-1px);
  }

  .fof-product-card__status {
    font-size: 0.9rem;
    font-weight: 600;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: rgba(31, 27, 23, 0.65);
  }

  @media (max-width: 1000px) {
    .fof-product__shell {
      grid-template-columns: 1fr;
    }

    .fof-product__media {
      order: -1;
    }
  }

  /* Features */
  .fof-features {
    margin-top: 0;
    padding: clamp(48px, 6vw, 72px) 0 clamp(36px, 5vw, 64px);
    background: #f5f1eb;
    border-top: 1px solid rgba(31, 27, 23, 0.1);
  }

  .fof-features__shell {
    display: grid;
    gap: clamp(24px, 5vw, 48px);
  }

  .fof-features__title h2 {
    margin: 0;
    text-align: center;
    font-size: clamp(2rem, 4vw, 2.6rem);
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: rgba(31, 27, 23, 0.72);
  }

  .fof-features__head {
    display: grid;
    gap: 18px;
    max-width: 640px;
  }

  .fof-features__head h3 {
    margin: 0;
    font-size: clamp(2rem, 5vw, 3rem);
    color: #1f1b17;
  }

  .fof-features__tagline {
    font-weight: 600;
  }

  .fof-features__head p {
    margin: 0;
    line-height: 1.6;
    color: rgba(31, 27, 23, 0.75);
  }

  .fof-features__grid {
    margin-top: 16px;
    display: grid;
    gap: clamp(18px, 2vw, 28px);
    grid-template-columns: repeat(6, minmax(0, 1fr));
    grid-auto-rows: minmax(140px, 1fr);
  }

  .fof-feature-card {
    position: relative;
    display: flex;
    align-items: flex-end;
    border-radius: 28px;
    overflow: hidden;
    min-height: clamp(200px, 34vw, 420px);
    background: #13100d;
    color: #ffffff;
    box-shadow: 0 24px 48px rgba(23, 20, 16, 0.16);
    isolation: isolate;
    transition: transform 160ms ease, box-shadow 160ms ease;
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
  }

  .fof-feature-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 28px 52px rgba(23, 20, 16, 0.24);
  }

  .fof-feature-card::after {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(180deg, rgba(13, 11, 9, 0.05) 0%, rgba(13, 11, 9, 0.54) 62%, rgba(13, 11, 9, 0.8) 100%);
    z-index: 1;
  }

  .fof-feature-card__media {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .fof-feature-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .fof-feature-card__content {
    position: relative;
    z-index: 2;
    width: 100%;
    padding: clamp(16px, 2vw, 28px);
    display: grid;
    gap: 8px;
    text-shadow: 0 2px 8px rgba(12, 10, 8, 0.6);
  }

  .fof-feature-card__content h3 {
    margin: 0;
    font-size: clamp(1.15rem, 2.2vw, 1.5rem);
    font-weight: 700;
  }

  .fof-feature-card__content p {
    margin: 0;
    font-size: clamp(0.95rem, 1.4vw, 1.05rem);
    line-height: 1.5;
    color: rgba(245, 241, 234, 0.88);
  }

  @media (max-width: 900px) {
    .fof-features__grid {
      grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
      grid-auto-rows: auto;
      gap: 16px;
    }

    .fof-feature-card {
      grid-column: auto !important;
      grid-row: auto !important;
      min-height: 240px;
    }
  }

  /* Contact */
  .fof-contact {
    background: linear-gradient(135deg, rgba(23, 20, 16, 0.9), rgba(38, 34, 30, 0.85)), var(--fof-contact-bg, none);
    background-size: cover;
    background-position: center;
    color: #fdf8f1;
    padding: clamp(64px, 12vw, 120px) 0;
  }

  .fof-contact__shell {
    display: grid;
    gap: clamp(40px, 8vw, 80px);
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    align-items: start;
  }

  .fof-contact__copy {
    display: grid;
    gap: 20px;
    max-width: 520px;
  }

  .fof-contact__copy h2 {
    margin: 0;
    font-size: clamp(2rem, 5vw, 3rem);
  }

  .fof-contact__copy p {
    margin: 0;
    line-height: 1.7;
    color: rgba(253, 248, 241, 0.82);
  }

  .fof-form {
    background: rgba(17, 15, 13, 0.75);
    border-radius: 28px;
    padding: clamp(24px, 6vw, 40px);
    display: grid;
    gap: 24px;
    box-shadow: 0 22px 36px rgba(0, 0, 0, 0.35);
  }

  .fof-form__banner {
    padding: 12px 16px;
    border-radius: 12px;
    font-size: 0.95rem;
  }

  .fof-form__banner--success {
    background: rgba(80, 160, 120, 0.25);
    border: 1px solid rgba(80, 160, 120, 0.4);
  }

  .fof-form__banner--error {
    background: rgba(200, 80, 60, 0.25);
    border: 1px solid rgba(200, 80, 60, 0.45);
  }

  .fof-form__fields {
    display: grid;
    gap: 18px;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  }

  .fof-field {
    display: grid;
    gap: 8px;
    font-size: 0.95rem;
  }

  .fof-field span {
    font-weight: 600;
    letter-spacing: 0.04em;
  }

  .fof-field input,
  .fof-field textarea {
    border: 1px solid rgba(253, 248, 241, 0.2);
    border-radius: 12px;
    padding: 14px 16px;
    background: rgba(12, 11, 10, 0.75);
    color: inherit;
  }

  .fof-field input:focus,
  .fof-field textarea:focus {
    outline: 2px solid rgba(253, 248, 241, 0.8);
    outline-offset: 2px;
  }

  .fof-field textarea {
    resize: vertical;
  }

  .fof-field.fof-field--full {
    grid-column: 1 / -1;
  }

  .fof-form__submit {
    justify-self: flex-start;
    padding: 16px 32px;
    border-radius: 16px;
    border: none;
    text-transform: uppercase;
    letter-spacing: 0.16em;
    font-weight: 600;
    background: #f5f1ea;
    color: #13100d;
    cursor: pointer;
    transition: transform 0.2s ease;
  }

  .fof-form__submit:hover,
  .fof-form__submit:focus-visible {
    transform: translateY(-1px);
  }

  /* Responsive adjustments */
  @media (max-width: 1100px) {
    .fof-page {
      gap: 0;
      padding-top: 100vh;
    }

    .fof-about__story-content {
      backdrop-filter: blur(12px);
    }
  }

  @media (max-width: 768px) {
    .fof-page {
      gap: 0;
      padding-top: 80vh;
    }

    .fof-about__intro {
      grid-template-columns: 1fr;
    }

    .fof-about__metrics {

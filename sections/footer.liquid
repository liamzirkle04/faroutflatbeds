<footer class="site-footer full-width">
  <div class="site-footer__shell">
    <div class="site-footer__contact">
      {% if section.settings.heading != blank %}
        <h2>{{ section.settings.heading | escape }}</h2>
      {% endif %}

      {% if section.settings.email != blank %}
        <a class="site-footer__email" href="mailto:{{ section.settings.email | strip }}">
          {{ section.settings.email | escape }}
        </a>
      {% endif %}

      {% if section.settings.location != blank %}
        <p class="site-footer__location">{{ section.settings.location | escape }}</p>
      {% endif %}
    </div>

    <nav class="site-footer__menu" aria-label="{{ 'general.accessibility.footer_menu' | t }}">
      {% assign nav_items = 'about:About,features:Features,contact:Contact' | split: ',' %}
      <ul>
        {% for item in nav_items %}
          {% assign parts = item | split: ':' %}
          <li>
            <a href="#{{ parts[0] }}">{{ parts[1] }}</a>
          </li>
        {% endfor %}
      </ul>
    </nav>

    {% if section.blocks.size > 0 %}
      <div class="site-footer__social" aria-label="{{ 'general.accessibility.social_media' | t }}">
        <ul>
          {% for block in section.blocks %}
            <li {{ block.shopify_attributes }}>
              {% liquid
                assign social_alt = block.settings.alt | default: block.settings.platform
                assign social_alt = social_alt | strip | escape
              %}
              <a href="{{ block.settings.url | default: '#' }}" target="_blank" rel="noopener" aria-label="{{ social_alt }}">
                {% if block.settings.logo != blank %}
                  {{ block.settings.logo
                    | image_url: width: 64
                    | image_tag:
                      widths: '32, 48, 64',
                      alt: social_alt,
                      loading: 'lazy'
                  }}
                {% else %}
                  <span>{{ block.settings.platform | escape }}</span>
                {% endif %}
              </a>
            </li>
          {% endfor %}
        </ul>
      </div>
    {% endif %}
  </div>

  <div class="site-footer__meta">
    <div class="site-footer__shell site-footer__meta-shell">
      <span>&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}</span>
    </div>
  </div>
</footer>

{% stylesheet %}
  .site-footer {
    background-color: #1f1b17;
    color: #f5f1ea;
  }

  .site-footer__shell {
    width: min(100%, var(--content-width));
    margin: 0 auto;
    display: grid;
    gap: clamp(32px, 6vw, 48px);
    padding-block: clamp(2rem, 4vw, 4rem);
    padding-inline: clamp(var(--page-margin), 6vw, 4rem);
  }

  .site-footer__contact h2 {
    margin: 0;
    font-size: clamp(1.6rem, 3vw, 2.2rem);
    letter-spacing: 0.08em;
    text-transform: uppercase;
  }

  .site-footer__email {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    margin-top: 16px;
    font-weight: 600;
    color: inherit;
    text-decoration: none;
    letter-spacing: 0.04em;
  }

  .site-footer__email:hover,
  .site-footer__email:focus-visible {
    text-decoration: underline;
  }

  .site-footer__location {
    margin: 16px 0 0;
    max-width: 32ch;
    line-height: 1.6;
    color: rgba(245, 241, 234, 0.78);
  }

  .site-footer__menu ul,
  .site-footer__social ul {
    list-style: none;
    display: flex;
    flex-wrap: wrap;
    gap: 16px;
    margin: 0;
    padding: 0;
  }

  .site-footer__menu a {
    color: inherit;
    text-decoration: none;
    letter-spacing: 0.04em;
  }

  .site-footer__menu a:hover,
  .site-footer__menu a:focus-visible {
    text-decoration: underline;
  }

  .site-footer__social a {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: rgba(245, 241, 234, 0.1);
    transition: background-color 0.2s ease;
  }

  .site-footer__social a:hover,
  .site-footer__social a:focus-visible {
    background: rgba(245, 241, 234, 0.2);
  }

  .site-footer__social img {
    width: 24px;
    height: 24px;
    object-fit: contain;
  }

  .site-footer__meta {
    border-top: 1px solid rgba(245, 241, 234, 0.12);
    margin-top: clamp(24px, 5vw, 48px);
  }

  .site-footer__meta-shell {
    width: min(100%, var(--content-width));
    margin: 0 auto;
    padding: 18px clamp(var(--page-margin), 5vw, 4rem);
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 16px;
    font-size: 0.9rem;
    letter-spacing: 0.06em;
    text-transform: uppercase;
  }

  @media (max-width: 768px) {
    .site-footer__meta-shell {
      flex-direction: column;
      justify-content: center;
      text-align: center;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:general.footer",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Footer heading",
      "default": "Stay connected"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email address",
      "default": "faroutflatbeds@gmail.com"
    },
    {
      "type": "textarea",
      "id": "location",
      "label": "Location",
      "default": "Bozeman, Montana"
    }
  ],
  "blocks": [
    {
      "type": "social_link",
      "name": "Social link",
      "settings": [
        {
          "type": "text",
          "id": "platform",
          "label": "Platform name",
          "default": "Instagram"
        },
        {
          "type": "url",
          "id": "url",
          "label": "Profile link"
        },
        {
          "type": "text",
          "id": "alt",
          "label": "Logo alt text"
        },
        {
          "type": "image_picker",
          "id": "logo",
          "label": "Logo image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Footer with contact",
      "blocks": [
        {
          "type": "social_link",
          "settings": {
            "platform": "Instagram"
          }
        },
        {
          "type": "social_link",
          "settings": {
            "platform": "Facebook"
          }
        },
        {
          "type": "social_link",
          "settings": {
            "platform": "YouTube"
          }
        }
      ]
    }
  ]
}
{% endschema %}

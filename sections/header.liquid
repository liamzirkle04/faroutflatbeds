<div class="flex w-full items-center justify-between gap-6 py-4">
  <a href="{{ routes.root_url }}" class="inline-block leading-none" aria-label="{{ shop.name }}">
    <img
      src="{{ 'ICON BLACK.png' | asset_url }}"
      alt="{{ shop.name }}"
      class="h-auto w-[7.5rem]"
      width="2001"
      height="556"
    >
  </a>

  <nav class="flex items-center gap-6 text-[color:var(--color-foreground)]" aria-label="Primary">
    {% liquid
      assign nav_items = 'about:About,features:Features,shop:Shop,contact:Contact' | split: ','
    %}
    {% for item in nav_items %}
      {% assign parts = item | split: ':' %}
      <a href="#{{ parts[0] }}" class="font-medium text-base">{{ parts[1] }}</a>
    {% endfor %}

    {% if shop.customer_accounts_enabled %}
      <a
        href="{{ routes.account_url }}"
        class="relative inline-flex h-8 w-8 items-center justify-center"
        aria-label="{{ 'customer.account.title' | t }}"
      >
        {{ 'icon-account.svg' | inline_asset_content }}
      </a>
    {% endif %}

    <a
      href="{{ routes.cart_url }}"
      class="relative inline-flex h-8 w-8 items-center justify-center"
      aria-label="{{ 'general.cart.title' | t }}"
    >
      {% if cart.item_count > 0 %}
        <sup class="absolute right-0 top-0 inline-flex min-w-[1.25rem] -translate-y-1/2 translate-x-1/2 items-center justify-center rounded-full bg-[color:var(--color-foreground)] px-1 py-0.5 text-[0.75rem] font-semibold leading-none text-[color:var(--color-background)]">
          {{ cart.item_count }}
        </sup>
      {% endif %}

      {{ 'icon-cart.svg' | inline_asset_content }}
    </a>
  </nav>
</div>

{% stylesheet %}
  #shopify-section-header {
    background-color: var(--color-background);
    position: sticky;
    top: 0;
    z-index: 100;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:general.header",
  "tag": "header"
}
{% endschema %}

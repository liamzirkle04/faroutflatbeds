<header class="header">
  <a href="{{ routes.root_url }}" class="header__brand-icon" aria-label="{{ shop.name }}">
    {{ 'ICON BLACK.png' | asset_url | img_tag: shop.name, 'header__brand-image' }}
  </a>

  <nav class="header__menu" aria-label="Primary">
    {% liquid
      assign nav_items = 'about:About,features:Features,shop:Shop,contact:Contact' | split: ','
    %}
    {% for item in nav_items %}
      {% assign parts = item | split: ':' %}
      <a href="#{{ parts[0] }}" class="header__link">{{ parts[1] }}</a>
    {% endfor %}

    {% if shop.customer_accounts_enabled %}
      <a href="{{ routes.account_url }}" class="header__icon-link" aria-label="{{ 'customer.account.title' | t }}">
        {{ 'icon-account.svg' | inline_asset_content }}
      </a>
    {% endif %}

    <a href="{{ routes.cart_url }}" class="header__icon-link" aria-label="{{ 'general.cart.title' | t }}">
      {% if cart.item_count > 0 %}
        <sup class="header__cart-count">{{ cart.item_count }}</sup>
      {% endif %}

      {{ 'icon-cart.svg' | inline_asset_content }}
    </a>
  </nav>
</header>

{% stylesheet %}
  #shopify-section-group-header-group,
  #shopify-section-header {
    position: sticky;
    top: 0;
    z-index: 100;
    background-color: #f0f0f0;
    border-bottom: 1px solid color-mix(in srgb, var(--color-foreground) 12%, transparent);
  }

  .header {
    padding: 1rem 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .header a {
    position: relative;
    text-decoration: none;
    color: var(--color-foreground);
  }

  .header__menu {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .header__link {
    font-weight: 500;
  }

  .header__icon-link svg {
    width: 2rem;
    height: 2rem;
    display: block;
  }

  .header__brand-image {
    display: block;
    width: 7.5rem;
    height: auto;
  }

  .header__brand-icon {
    display: block;
    line-height: 0;
  }

  .header__cart-count {
    position: absolute;
    transform: translate(50%, -50%);
    top: 0;
    right: 0;
    min-width: 1.25rem;
    padding: 0.125rem 0.25rem;
    border-radius: 9999px;
    background-color: var(--color-foreground);
    color: var(--color-background);
    font-size: 0.75rem;
    line-height: 1;
    text-align: center;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:general.header",
  "settings": []
}
{% endschema %}
